{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",      
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@plugins/*": ["plugins/*"],
      "@routes/*": ["routes/*"],
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
      "@utils/*": ["utils/*"],
      "@schemas/*": ["schemas/*"]

    }
  },
  "include": ["src"]
}
